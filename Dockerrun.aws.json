{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "frontend-app",
      "host": {
        "sourcePath": "/var/app/current/frontend-app"
      }
    },
    {
      "name": "learner-app",
      "host": {
        "sourcePath": "/var/app/current/learner-app"
      }
    },
    {
      "name": "word-app",
      "host": {
        "sourcePath": "/var/app/current/word-app"
      }
    },
    {
      "name": "worker-app",
      "host": {
        "sourcePath": "/var/app/current/worker-app"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "word-app",
      "image": "kieronqtran/cogri-vocabulary-word",
      "essential": true,
      "memory": 128
    },
    {
      "name": "learner-app",
      "image": "kieronqtran/cogri-vocabulary-learner",
      "essential": true,
      "memory": 128
    },
    {
      "name": "worker-app",
      "image": "kieronqtran/cogri-vocabulary-worker",
      "essential": true,
      "memory": 128
    },
    {
      "name": "frontend-app",
      "image": "kieronqtran/cogri-vocabulary-fe",
      "essential": true,
      "memory": 256
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
				"frontend-app",
				"word-app",
				"learner-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}
