{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "frontend-app",
      "host": {
        "sourcePath": "/var/app/current/frontend-app"
      }
    },
    {
      "name": "api-app",
      "host": {
        "sourcePath": "/var/app/current/api-app"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "api-app",
      "image": "kieronqtran/cogri-vocabulary-api",
      "essential": true,
      "memory": 128
    },
    {
      "name": "frontend-app",
      "image": "kieronqtran/cogri-vocabulary-fe",
      "essential": true,
      "memory": 256
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
				"frontend-app",
        "api-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}
