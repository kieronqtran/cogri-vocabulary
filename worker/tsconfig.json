{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
